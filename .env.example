# Environment
NODE_ENV=development

# Frontend Environment Variables
NEXT_PUBLIC_MVX_ENVIRONMENT=testnet
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WC_PROJECT_ID=your_walletconnect_project_id

# Backend Environment Variables
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/elronom
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# OpenAI
OPENAI_API_KEY=your_openai_api_key

# MultiversX
MVX_GATEWAY_URL=https://testnet-gateway.multiversx.com
MVX_API_URL=https://testnet-api.multiversx.com

# Smart Contracts (Testnet)
ELRONOM_CORE_CONTRACT=erd1...
EDUCATIONAL_NFT_CONTRACT=erd1...
QUEST_SYSTEM_CONTRACT=erd1...

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Legal & Compliance
COMPANY_NAME=ELRONOM SRL
COMPANY_ADDRESS=Bucharest, Romania
COMPLIANCE_EMAIL=compliance@elronom.com

# Development
LOG_LEVEL=debug
ENABLE_SWAGGER=true