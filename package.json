{
  "name": "elronom-multiversx-trading-academy",
  "version": "0.1.0",
  "description": "ðŸŽ® ELRONOM - The MultiversX Trading Academy: Educational gamified blockchain app teaching trading and EGLD with NFT rewards, quests, and AI mentorship",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "mobile"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && npm run test",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "contracts:build": "cd smart-contracts && sc-meta all build",
    "contracts:test": "cd smart-contracts && sc-meta all test",
    "contracts:deploy:testnet": "cd smart-contracts && npm run deploy:testnet",
    "setup": "npm install && npm run setup:frontend && npm run setup:backend",
    "setup:frontend": "cd frontend && npm install",
    "setup:backend": "cd backend && npm install",
    "clean": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "cd frontend && rm -rf .next node_modules",
    "clean:backend": "cd backend && rm -rf dist node_modules",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Gzeu/elronom-multiversx-trading-academy.git"
  },
  "keywords": [
    "multiversx",
    "elrond",
    "blockchain",
    "trading",
    "education",
    "gamification",
    "nft",
    "defi",
    "ai-mentor",
    "quest-system",
    "pwa",
    "typescript",
    "rust",
    "smart-contracts"
  ],
  "author": {
    "name": "George Pricop",
    "email": "pricopgeorge@gmail.com",
    "url": "https://github.com/Gzeu"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Gzeu/elronom-multiversx-trading-academy/issues"
  },
  "homepage": "https://github.com/Gzeu/elronom-multiversx-trading-academy#readme",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/Gzeu"
  }
}